<CreateReportScreen>:

    MDBoxLayout:
        id: main_widget
        orientation: "vertical"
        padding: [30, 0, 30, 30]

        MDToolbar:
            id: toolbar
            title: "Создать отчёт"
            md_bg_color: 0, 0, 1, 0
            specific_text_color: "black"
            left_action_items: [["arrow-left", lambda x: app.back()]]


        MDGridLayout:
            id: main_layout
            rows: 7
            padding: [50, 30, 50, 0]
            spacing: 0

# ========= ПРЕДМЕТ ======== #
            MDBoxLayout:
                spacing: 30
                size_hint_y: None

                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': 1}

                    MDLabel:
                        id: course_label
                        text: "Предмет:"
                        font_size: "14sp"
                        size_hint_y: None
                        markup: True
                        size_hint_x: 1
                        halign: "right"

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': 1}

                    MDTextField:
                        id: course
                        mode: "line"
                        font_size: "14sp"
                        size_hint_max_x: 350
                        line_color_normal: 0, 0, 0, 1
                        line_color_focus: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

# ========= КЛАСС ======== #
            MDBoxLayout:
                spacing: 30
                size_hint_y: None

                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "top"
                    pos_hint: {'center_x': .5, 'center_y': 1.25}

                    MDLabel:
                        id: n_class_label
                        text: "Класс:"
                        font_size: "14sp"
                        size_hint_y: None
                        size_hint_x: None
                        markup: True
                        halign: "right"

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': 1.25}

                    MDTextField:
                        id: n_class
                        hint_text: ""
                        size_hint_max_x: 70
                        font_size: "14sp"
                        mode: "line"
                        line_color_normal: 0, 0, 0, 1
                        line_color_focus: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

# ========= КОЛ-ВО ЧЕЛОВЕК ======== #
            MDBoxLayout:
                spacing: 30
                size_hint_y: None

                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': 1.5}

                    MDLabel:
                        id: humans_label
                        text: "Количество человек:"
                        font_size: "14sp"
                        size_hint_y: None
                        markup: True
                        size_hint_x: 1
                        halign: "right"

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': 1.5}

                    MDTextField:
                        id: humans
                        hint_text: ""
                        size_hint_max_x: 70
                        font_size: "14sp"
                        mode: "line"
                        line_color_normal: 0, 0, 0, 1
                        line_color_focus: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

# ========= ТИП ОТЧЁТА ======== #
            MDBoxLayout:
                spacing: 30
                size_hint_y: None

                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .9, 'center_y': 1.75}

                    MDLabel:
                        id: report_type_label
                        text: "Тип отчёта:"
                        font_size: "14sp"
                        size_hint_y: None
                        size_hint_x: 1
                        halign: "right"
                        markup: True

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .9, 'center_y': 1.75}

                    MDDropDownItem:
                        id: report_type
                        font_size: "14sp"
                        padding: [0, 0, 0, 0]
                        text: "Выберете тип отчёта"
                        halign: "left"
                        on_release: root.report_type.open()

# ========= ПАРАМЕТРЫ ТИПА ОТЧЁТА: ======== #
            MDGridLayout:
                cols: 2
                spacing: 0

    # ========= ДЛЯ КР: ======== #
                MDGridLayout:
                    id: tests
                    rows: 2
                    spacing: 0
                    disabled: True

        # ========= ДАТА ПРОВЕДЕНИЯ ======== #
                    MDBoxLayout:
                        spacing: 30
                        size_hint_y: None

                        AnchorLayout:
                            anchor_x: "right"
                            anchor_y: "center"
                            pos_hint: {'center_x': .9, 'center_y': 2}

                            MDLabel:
                                id: date_label
                                text: "Дата:"
                                markup: True
                                font_size: "14sp"
                                size_hint_y: None
                                size_hint_x: 1
                                halign: "right"
                                markup: True

                        AnchorLayout:
                            anchor_x: "left"
                            anchor_y: "center"
                            pos_hint: {'center_x': .9, 'center_y': 2}

                            MDRaisedButton:
                                text: "Выбрать день"
                                font_size: "14sp"
                                padding: [0, 0, 0, 0]
                                on_release: root.show_date_picker()
        # ========= КОЛ-ВО ЧЕЛОВЕК НА КР ======== #
                    MDBoxLayout:
                        spacing: 30
                        size_hint_y: None

                        AnchorLayout:
                            anchor_x: "right"
                            anchor_y: "center"
                            pos_hint: {'center_x': .9, 'center_y': 2.25}

                            MDLabel:
                                id: curr_humans_label
                                text: "Сколько человек было на контрольной работе:"
                                font_size: "14sp"
                                size_hint_y: None
                                size_hint_x: 1
                                halign: "right"
                                markup: True

                        AnchorLayout:
                            anchor_x: "left"
                            anchor_y: "center"
                            pos_hint: {'center_x': .9, 'center_y': 2.25}

                            MDTextField:
                                id: curr_humans
                                hint_text: ""
                                size_hint_max_x: 70
                                font_size: "14sp"
                                mode: "line"
                                line_color_normal: 0, 0, 0, 1
                                padding: [0, 0, 0, 0]

    # ========= ДЛЯ ЧЕТВЕРТЕЙ: ======== #
                MDGridLayout:
                    id: quarters
                    rows: 1
                    padding: [0, 0, 0, 0]
                    spacing: 0
                    disabled: True

        # ========= № ЧЕТВЕРТИ ======== #
                    MDBoxLayout:
                        spacing: 30
                        size_hint_y: None

                        AnchorLayout:
                            anchor_x: "right"
                            anchor_y: "center"
                            pos_hint: {'center_x': .9, 'center_y': 2}

                            MDLabel:
                                id: n_quarter_label
                                text: "Четверть:"
                                font_size: "14sp"
                                size_hint_y: None
                                size_hint_x: 1
                                halign: "right"
                                markup: True

                        AnchorLayout:
                            anchor_x: "left"
                            anchor_y: "center"
                            pos_hint: {'center_x': .9, 'center_y': 2}

                            MDDropDownItem:
                                id: n_quarter
                                padding: [0, 0, 0, 0]
                                font_size: "14sp"
                                text: "Выберете четверть"
                                halign: "left"
                                on_release: root.n_quarter.open()

# ========= ОЦЕНКИ: ======== #
            MDBoxLayout:
                id: e
                spacing: 30
                size_hint_y: None

    # ========= ПЯТЁРКИ ======== #
                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDLabel:
                        id: 5_label
                        text: "5:"
                        font_size: "14sp"
                        size_hint_y: None
                        size_hint_x: None
                        halign: "right"
                        markup: True

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDTextField:
                        id: 5
                        hint_text: ""
                        size_hint_max_x: 70
                        mode: "line"
                        line_color_normal: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

    # ========= ЧЕТВЁРКИ ======== #
                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDLabel:
                        id: 4_label
                        text: "4:"
                        font_size: "14sp"
                        size_hint_y: None
                        size_hint_x: None
                        halign: "right"
                        markup: True

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDTextField:
                        id: 4
                        hint_text: ""
                        size_hint_max_x: 70
                        mode: "line"
                        line_color_normal: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

    # ========= ТРОЙКИ ======== #
                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDLabel:
                        id: 3_label
                        text: "3:"
                        font_size: "14sp"
                        size_hint_y: None
                        size_hint_x: None
                        halign: "right"
                        markup: True

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDTextField:
                        id: 3
                        hint_text: ""
                        size_hint_max_x: 70
                        mode: "line"
                        line_color_normal: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

    # ========= ДВОЙКИ ======== #
                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDLabel:
                        id: 2_label
                        text: "2:"
                        font_size: "14sp"
                        size_hint_y: None
                        size_hint_x: None
                        halign: "right"
                        markup: True

                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    pos_hint: {'center_x': .5, 'center_y': .7}

                    MDTextField:
                        id: 2
                        hint_text: ""
                        size_hint_max_x: 70
                        mode: "line"
                        line_color_normal: 0, 0, 0, 1
                        padding: [0, 0, 0, 0]

# ========= ННОПКА СОЗДАНИЯ ОТЧЁТА ======== #
            MDBoxLayout:
                size_hint_y: None

                AnchorLayout:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    anchor_x: "center"
                    anchor_y: "top"

                    MDRaisedButton:
                        text: "Создать"
                        font_size: "14sp"
                        on_release: root.create_report()



