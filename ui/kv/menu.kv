<MenuScreen>:

    MDBoxLayout:
        orientation: "horizontal"
        padding: [30, 30, 30, 30]
        spacing: 20
        AnchorLayout:
            anchor_x: "right"
            anchor_y: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            MDCard:
                orientation: "vertical"
                padding: [30, 30, 30, 30]
                pos_hint: {"center_x": 0.5, "center_y": .5}
                size_hint: None, None
                size: 500, 250
                md_bg_color: app.theme_cls.primary_color
                MDBoxLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        pos_hint: {"center_x": 0.5, "center_y": .5}

                        MDLabel:
                            markup: True
                            text: "[b]Ваши фамилия, имя и отчество[/b]\n[size=14]Запишите без ошибок, через пробелы и нажмите Enter[/size]"
                            font_size: "20sp"
                            halign: "center"

                MDBoxLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                        MDTextField:
                            id: teacher
                            hint_text: "ФИО"
                            mode: "rectangle"
                            size_hint_max_x: 300
                            multiline: False
                            helper_text_mode: "on_error"
                            line_color_focus: app.theme_cls.accent_dark
                            text_color_focus: app.theme_cls.accent_dark
                            on_focus: if self.focus: root.teacher_menu.open()

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            MDCard:
                id: nav_button
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                disabled: True
                size_hint: None, None
                size: 500, 250
                md_bg_color: app.theme_cls.primary_color

                MDBoxLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        MDRectangleFlatIconButton:
                            text: "Создать новый отчёт"
                            icon: "creation"
                            line_color: app.theme_cls.accent_color
                            text_color: app.theme_cls.accent_dark
                            icon_color: app.theme_cls.accent_dark
                            font_size: "14sp"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            on_release:
                                root.manager.current = "create_report"
                                root.manager.transition.direction = "left"

                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        MDRectangleFlatIconButton:
                            id: history_button
                            text: "История отчётов"
                            icon: "history"
                            font_size: "14sp"
                            line_color: app.theme_cls.accent_color
                            text_color: app.theme_cls.accent_dark
                            icon_color: app.theme_cls.accent_dark
                            disabled: True
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            on_release:
                                root.manager.current = "history"
                                root.manager.transition.direction = "left"

                MDBoxLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        MDRectangleFlatIconButton:
                            text: "Взять из файла"
                            icon: "file-export"
                            font_size: "14sp"
                            line_color: app.theme_cls.accent_color
                            text_color: app.theme_cls.accent_dark
                            icon_color: app.theme_cls.accent_dark
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            on_release:
                                root.import_report()
                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        MDRectangleFlatIconButton:
                            id: stats_button
                            text: "Статистика"
                            icon: "chart-areaspline"
                            font_size: "14sp"
                            line_color: app.theme_cls.accent_color
                            text_color: app.theme_cls.accent_dark
                            icon_color: app.theme_cls.accent_dark
                            disabled: True
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            on_release:
                                root.manager.current = "stats"
                                root.manager.transition.direction = "left"