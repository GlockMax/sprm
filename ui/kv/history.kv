<HistoryOfReports>:
	MDBoxLayout:
	    orientation: "vertical"
	    padding: [30, 0, 30, 30]

	    MDTopAppBar:
	        title: "История отчётов"
	        md_bg_color: app.theme_cls.primary_color
	        specific_text_color: "black"
	        elevation: 2
	    	left_action_items: [["arrow-left", lambda x: app.back()]]

        MDFloatLayout:
            MDBoxLayout:
                size_hint_x: None
                pos_hint: {"center_x": .70, "center_y": 1}
                size_hint_y: None

                MDGridLayout:
                    cols: 3
                    spacing: 30

                    MDRectangleFlatIconButton:
                        id: delete
                        padding: [0, 0, 0, 0]
                        icon_color: "red"
                        text_color: "red"
                        line_color: 0, 0, 0, 0
                        icon: "trash-can-outline"
                        text: "Удалить"
                        on_release: root.delete_report()

                    MDRectangleFlatIconButton:
                        id: print
                        line_color: 0, 0, 0, 0
                        icon: "printer"
                        icon_color: app.theme_cls.accent_dark
                        text_color: "black"
                        padding: [0, 0, 0, 0]
                        text: "Распечатать"
                        on_release: root.print_report()

                    MDRectangleFlatIconButton:
                        id: sjpg
                        line_color: 0, 0, 0, 0
                        icon: "file-download"
                        padding: [0, 0, 0, 0]
                        icon_color: app.theme_cls.accent_dark
                        text_color: "black"
                        text: "Сохранить в .jpeg"
                        on_release: root.save_in_jpeg()

            AnchorLayout:
                id: history
                anchor_x: "center"
                anchor_y: "center"
                pos_hint: {"center_x": .5, "center_y": .47}