<Table>
    style: "elevated"
    line_color: 0, 0, 0, 1
    shadow_softness: 14
    shadow_offset: 0, 0
    radius: 2, 2, 2, 2
    #md_bg_color: "#f6eeee"
    md_bg_color: app.theme_cls.primary_color

    orientation: 'vertical'
    padding: [20, 20, 20, 20]
    BoxLayout:
        orientation: "horizontal"
        id: header
        #spacing: 2
        size_hint_y: None
        height: dp(48)
    ScrollView:
        size_hint_y: 1
        GridLayout:
            id: body
            #spacing: 2
            size_hint_y: None
            height: self.minimum_height

<Header>
    padding: [10,10,10,10]
    canvas.before:
        Color:
            rgba: app.theme_cls.accent_dark
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y:None
    height:dp(48)
    MDLabel:
        id:header
        size_hint_x: None
        markup: True
        text: root.text
        color: "white"
<Cell>
    padding:[10,10,10,10]
    spacing: 5
    canvas.before:
        Color:
            rgba: app.theme_cls.accent_color
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y:None
    height:dp(48)
    MDCheckbox:
        id: check
        size_hint: None, None
        size: "24dp", "24dp"
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
        on_active: root.parent.parent.parent.on_check_active(*args)
    MDLabel:
        id: cell
        text: root.text